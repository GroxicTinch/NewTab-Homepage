{
    "manifest_version": 2,
    "name": "Groxic Homepage",
    "version": "1.0",
    "description": "A personal homepage",
    "###incognito": "split",
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "permissions": [
        "identity",
        "storage",
        "https://www.googleapis.com/*",
        "https://api.open-meteo.com/v1/forecast*",
        "https://oauth2.googleapis.com/*",
        "<all_urls>"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "newtab@groxictinch",
            "strict_min_version": "68.0"
        }
    },
    "background": {
        "scripts": [
            "utils/getEnv.js",
            "privateVars.js",
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Groxic"
    }
}